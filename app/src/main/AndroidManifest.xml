<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Quyền cần thiết -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Activity Khởi động chính -->
        <activity
            android:name=".test.LoginActivity"
            android:exported="true"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".test.SignInActivity"
            android:exported="false"
            android:theme="@style/SignInTheme" />

        <activity
            android:name=".test.SignUpActivity"
            android:exported="false"
            android:theme="@style/SignUpTheme" />

        <activity
            android:name=".test.MenuActivity"
            android:exported="false"
            android:theme="@style/DrawerTheme" />

    </application>

</manifest>
